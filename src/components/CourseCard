export default function CourseCard({ course }) {
  const getProgressColor = (progress) => {
    if (progress >= 80) return 'bg-green-500'
    if (progress >= 60) return 'bg-blue-500'
    if (progress >= 40) return 'bg-yellow-500'
    return 'bg-red-500'
  }

  return (
    <div className="bg-white rounded-xl shadow-md p-6 card-hover">
      <div className="flex justify-between items-start">
        <div>
          <h3 className="text-xl font-semibold">{course.code}</h3>
          <h4 className="text-lg text-gray-700">{course.name}</h4>
          <p className="text-gray-600 mt-1">Prof: {course.professor}</p>
        </div>
        <span className="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
          {course.credits} Credits
        </span>
      </div>
      
      <div className="mt-4">
        <div className="flex justify-between mb-1">
          <span className="text-sm text-gray-600">Progress</span>
          <span className="text-sm font-semibold">{course.progress}%</span>
        </div>
        <div className="w-full bg-gray-200 rounded-full h-2">
          <div 
            className={`h-2 rounded-full ${getProgressColor(course.progress)}`}
            style={{ width: `${course.progress}%` }}
          ></div>
        </div>
      </div>
      
      <div className="mt-4 flex justify-between text-sm text-gray-500">
        <span>ğŸ“… {course.schedule}</span>
        <span>ğŸ›ï¸ {course.room}</span>
      </div>
    </div>
  )
}
